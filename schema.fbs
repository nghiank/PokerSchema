//Schema for Netty Chat Server
namespace schema;

union Data {CredentialToken, ReconnectKey, JoinRoomCommand, PlayerInfo}

table PlayerInfo {
  name: string;
}

table RoomInfo {
  players:[PlayerInfo];		
}

table JoinRoomCommand {
  token:string (required);
  roomId:string;
}

table ReconnectKey {
  key:string (required);
}

table CredentialToken {
  token:string (required);
}

table Message {
  data:Data;
}

root_type Message;

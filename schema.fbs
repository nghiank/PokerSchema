//Schema for Netty Chat Server
namespace schema;

union Data {CredentialToken, ReconnectKey, JoinRoomCommand}

table PlayerInSession {
  name: string;
  amount: int32;
}

table Room {
	name:string;
	players:[PlayerInSession];		
}

table JoinRoomCommand {
  token:string (required);
  roomId:string;
}
table ReconnectKey {
  key:string (required);
}

table CredentialToken {
  token:string (required);
}

table Message {
  data:Data;
}

root_type Message;

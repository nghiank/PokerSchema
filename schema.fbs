//Schema for Netty Chat Server
namespace schema;

union Data {JoinRoomCommand, RoomInfo, PlayerUpdate}
enum PlayerStatus : byte { Unknown = 0, Arrive, Left}

table PlayerInfo {
  userId: string;
  name: string;
}

table RoomInfo {
  players:[PlayerInfo];		
}

table PlayerUpdate {
  status: PlayerStatus;
  player: PlayerInfo;
}

table JoinRoomCommand {
  token:string (required);
  roomId:string;
}

table Message {
  data:Data;
}

root_type Message;
